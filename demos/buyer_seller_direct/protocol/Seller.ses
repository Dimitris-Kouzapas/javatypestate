package demos.buyer_seller_direct.protocol;

typestate Seller {
	session
		Init = {
			void title(String): AwaitingAgreement
		}
	where
		AwaitingAgreement = {
			void agree(int): AwaitingPayment1,
			void quit(): end
		}

		AwaitingPayment1 = {
			void payment1(int): AwaitingPayment2
		}	
		
		AwaitingPayment2 = {
		    void payment2(int): end
		}
}

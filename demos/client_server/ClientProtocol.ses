package demos.client_server;

// We use the local projections to generate the client and server typestates.
// The basic structure is that for every C -> S interaction, there is a send/receive
// pair. Here we see the "send" half of one communication and the "receive" half of
// the other communication.

typestate ClientProtocol {
	session
		Init = {
			void sendRequest(int): AwaitingResponse
		}
	where
		AwaitingResponse = {
			String receiveResponse(): end
		}
}

package demos.loop;

/**
 * Here we don't realise that the while loop only terminates when finished() has
 * returned TRUE.
 */
class ClientTest2 {
  	void test_break () {
  		LoopImpl loop = new LoopImpl();
  		out: do {
  			switch (loop.finished().getEnum()) {
  			case Bool.FALSE:
  				break; // continue would do as well
  			case Bool.TRUE:
  				break out;
  			}
  		} while(true);
  	}
}

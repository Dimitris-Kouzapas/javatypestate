package demos.loop;

/**
 * We don't treat a comparison to TRUE analogously to switching on a Bool value;
 * nor do we spot that the loop only terminates if finished() returns TRUE.
 */ 
class ClientTest1 {
  	void test () {
  		LoopImpl loop = new LoopImpl();
  		out: do {
  			switch (loop.finished().getEnum()) {
  			case Bool.FALSE:
  				break; // continue would do as well
  			case Bool.TRUE:
  				break out;
  			}
  		} while(true);
  	}
}

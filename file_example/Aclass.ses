package file_example;

class Aclass typestate Aprotocol{
	private File myFile;

	void aMethod() {
		myFile = new File("text.txt");
	//	myFile = new File("text.txt");
	}

	void bMethod() {
		switch(myFile.open().getEnum()) {
			case Status.OK:
				loop:
				while(true) {
					switch(myFile.hasNext().getEnum()) {
						case BooleanEnum.TRUE:
							myFile.read();
							break;
						case BooleanEnum.FALSE:
							break loop;
					}
				}
				break;
			case Status.ERROR:
				System.out.println("file not found!");
				break;
		}

		myFile.close();

	}
}
